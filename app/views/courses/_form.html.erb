<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :autofocus => true, input_html: {class: "input-xlarge"}%>
    <%= f.input :description, input_html: {rows: 5, class: "input-xlarge"}%>
    <%= f.input :capacity, selected: @course.capacity %>
    <%= f.input :class_min, :collection => 1..6, selected: @course.class_min,  hint: "FÃ¼r welche Klassen geeignet? " %>
    <%= f.input :class_max, :collection => 1..6, selected: @course.class_max %>
    <%= f.input :where, input_html: {class: "input-xlarge"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary"%>
  </div>
<% end %>
