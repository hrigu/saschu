<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :autofocus => true, input_html: {class: "input-xlarge"}%>
    <%= f.input :description, input_html: {rows: 5, class: "input-xlarge"}%>

    <%= f.input :capacity, selected: @course.capacity %>
    <%= f.input :class_min, :collection => 1..6, selected: @course.class_min,  hint: "Für welche Klassen geeignet? " %>
    <%= f.input :class_max, :collection => 1..6, selected: @course.class_max %>
    <%= f.input :where, input_html: {class: "input-xlarge"}, hint: "'Bei mir zu Hause', 'Turnhalle', 'Schulzimmer', oder freier Text"%>
    <%= f.input :expence, hint: "zu Lasten der Schule" %>
    <%= f.input :payroll_form %>
    <%= f.input :children_material, input_html: {class: "input-xlarge"}, hint: "'Finken', 'Turnsachen', 'z'Nüni', anderes" %>
    <%= f.input :material, input_html: {class: "input-xlarge"}%>
    <%= f.input :notes_for_path, input_html: {class: "input-xlarge"}, hint: "zusätzliche Begleitung nötig, ÖV, Transport mit PW, ..." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary"%>
  </div>
<% end %>
