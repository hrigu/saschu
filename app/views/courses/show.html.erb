<h3>Dein Kurs</h3>

<table class="table table-striped table-bordered">

  <tr>
    <td><b>Titel:</b></td>
    <td><%= @course.title %></td>
  </tr>
  <tr>
    <td><b>Beschreibung:</b></td>
    <td><%= @course.description %></td>
  </tr>
  <tr>
    <td><b>Wo:</b></td>
    <td>  <%= @course.where %></td>
  </tr>
  <tr>
    <td><b>Kapazität:</b></td>
    <td>  <%= @course.capacity %></td>
  </tr>
  <tr>
    <td><b>Für welche Klassen:</b></td>
    <td><%= @course.class_min %> - <%= @course.class_max %> Klasse</td>
  </tr>
  <tr>
    <td><b>Geschätzte Kosten:</b></td>
    <td><%= @course.expence %> Franken</td>
  </tr>
  <tr>
    <td><b>Abrechnungsformular:</b></td>
    <td><%= @course.payroll_form? ? "Ja": "Nein" %></td>
  </tr>
  <tr>
    <td><b>Die Kinder nehmen mit:</b></td>
    <td><%= @course.children_material%></td>
  </tr>
  <tr>
    <td><b>Ich brauche an Material:</b></td>
    <td><%= @course.material%></td>
  </tr>
  <tr>
    <td><b>Weg zum Kursort:</b></td>
    <td><%= @course.notes_for_path%></td>
  </tr>
</table>

<% if State.state_is_kurse_buchen? %>
    <div class="well">
      Definitiv angemolden haben sich:
    </div>

    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <th>Klasse</th>
        <th>Email</th>
      </tr>

      <% @course.definitive_students.each do |ds| %>
          <tr>
            <td><%= ds.student.user.name %></td>
            <td><%= ds.student.school_class.name %></td>
            <td><%= ds.student.user.email %></td>
          </tr>
      <% end %>
    </table>
<% end %>

<% if State.state_is_kurse_eingeben? %>
    <%= link_to 'editieren...', edit_course_path(@course) %> |
    <%= link_to 'löschen...', @course, method: :delete, data: {confirm: 'Wills du den Kurs wirklich löschen?'} %>
<% end %>