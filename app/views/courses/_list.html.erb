<% if @courses.empty? %>
    <p> Es gibt noch keine Kurse. Sei du der erste!</p>
<% else %>

    <table class="table table-striped table-bordered">
      <tr>
        <th>Titel</th>
        <th>Beschreibung</th>

        <th>Gruppengr√∂sse</th>
        <th>Klassen</th>
        <th>Wo findet er statt?</th>
        <th>Leitung</th>
      </tr>

      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.description %></td>
            <td><%= course.capacity %></td>
            <td><%= course.class_min %> - <%= course.class_max %> </td>
            <td><%= course.where %></td>
            <td><%= course.parent.user.name %></td>
          </tr>
      <% end %>
    </table>
<% end %>